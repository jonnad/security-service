<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xmlns:context="http://www.springframework.org/schema/context" xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
            http://cxf.apache.org/jaxrs
            http://cxf.apache.org/schemas/jaxrs.xsd
            http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.1.xsd">

    <import resource="classpath:META-INF/cxf/cxf.xml" />

    <context:annotation-config/>
    <context:component-scan base-package="com.ventyx.security"/>

    <context:property-placeholder ignore-unresolvable="false" location="classpath:/env/local/*.properties"/>

    <!-- Data Source com.mchange.v2.c3p0.ComboPooledDataSource -->
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${database.driverClassName}"/>
        <property name="url" value="${database.url}"/>
        <property name="username" value="${database.username}"/>
        <property name="password" value="${database.password}"/>
    </bean>

    <bean id="sessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean" >
        <property name="dataSource" ref="dataSource"/>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">${database.hibernate.dialect}</prop>
                <!--<prop key="hibernate.hbm2ddl.auto">create</prop>-->
                <prop key="hibernate.show_sql">false</prop>

            </props>
        </property>
        <property name="annotatedClasses">
            <list>
                <value>com.ventyx.security.api.model.Authentication</value>
                <value>com.ventyx.security.api.model.ServiceDefinition</value>
                <value>com.ventyx.security.api.model.Endpoint</value>
            </list>
        </property>
    </bean>

    <!-- Transaction Manager -->
    <bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <tx:annotation-driven transaction-manager="transactionManager"/>

    <!-- REST endpoints/services -->
    <jaxrs:server id="services" address="/">
        <jaxrs:serviceBeans>
            <bean class="com.ventyx.security.sampleservices.rest.SecurityServiceRestImpl" />
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <bean class="org.codehaus.jackson.jaxrs.JacksonJsonProvider"/>
        </jaxrs:providers>
    </jaxrs:server>

    <!-- SOAP endpoints/services -->
    <bean id="localSecurityWebServiceImpl" class="com.ventyx.security.sampleservices.soap.SecurityServiceSoapImpl"/>

    <jaxws:endpoint
            implementorClass="com.ventyx.security.sampleservices.SecurityService"
            implementor="#localSecurityWebServiceImpl"
            address="/security/token"/>

</beans>